    html [subst {
        <html>
        <head>
        <link rel="stylesheet" href="/style.css">
        <title>Threads</title>
        </head>

        <body>
        <ul>
        [lmap task $tasks {subst {<li>$task</li>}}]
        </ul>
        </body>
        </html>
    }]
}
