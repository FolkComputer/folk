When the db library is /dbLib/ {
  Wish the web server handles route "/holds" with handler [list apply {{db dbLib} {
    set holds [$dbLib holds $db]

    html [subst {
      <html>
      <head>
        <link rel="stylesheet" href="/style.css">
        <title>Statement Holds</title>
      </head>
      <nav>
        <a href="/"><button>Statements</button></a>
        <a href="/new"><button>New program</button></a>
        <a href="/programs">Running programs</a>
        <a href="/threads">Threads</a>
        <a href="/trace">Trace</a>
      </nav>
      <h1>Statement Holds</h1>
      <ol>
        [lmap holdObj $holds {
            lassign $holdObj key version clause
            subst {<li>$key ($version): <pre>[htmlEscape [string range $clause 0 300]]</pre></li>}
        }]
      </ol>
      </html>
    }]
  }} [__db] $dbLib]
}
