if {$::isLaptop} return

namespace eval ::Camera {
    variable WIDTH 1280
    variable HEIGHT 720
}

On process {
    source pi/Camera.tcl
    Camera::init 1280 720

    puts "Camera tid: [getTid]"
    
    forever {
        set cameraTime [time {
            set grayFrame [Camera::grayFrame]
        }]
        Commit {
            Claim the camera time is $cameraTime
            Claim the camera frame is $grayFrame
        }
    }
}
